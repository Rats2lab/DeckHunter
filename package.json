{
  "name": "deck-hunter",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build --tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node src/infrastructure/framework/nestjs/main.ts",
    "start:dev": "nest start --tsc --watch",
    "start:debug": "nest start --tsc --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --forceExit --config ./test/jest.config.ts",
    "test:watch": "npm run test --watch",
    "test:cov": "npm run test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --forceExit --config ./test/jest-e2e.config.json",
    "test:out": "jest --forceExit --config ./test/jest-out.config.json",
    "compose:up": "npm run docker:dev:up && npm run docker:test:up",
    "compose:down": "npm run docker:dev:down && npm run docker:test:down",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml --env-file .env.dev up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml --env-file .env.dev down",
    "docker:test:up": "docker-compose -f docker-compose.test.yml --env-file .env.test up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml --env-file .env.test down",
    "docker:test": "docker exec -it test-deck-hunter-be npm run test",
    "docker:test:e2e": "docker exec -it test-deck-hunter-be npm run test:e2e",
    "docker:test:out": "docker exec -it test-deck-hunter-be npm run test:out",
    "docker:test:cov": "docker exec -it test-deck-hunter-be npm run test:cov",
    "migration:create": "docker exec -it deck-hunter-be npm run mikro-orm migration:create -p src/persistence/mikro-orm/migration -n",
    "migration:list": "docker exec -it deck-hunter-be npm run mikro-orm migration:list",
    "migration:pending": "docker exec -it deck-hunter-be npm run mikro-orm migration:pending"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.7.14",
    "@mikro-orm/core": "^5.7.14",
    "@mikro-orm/migrations": "^5.7.14",
    "@mikro-orm/nestjs": "^5.2.3",
    "@mikro-orm/postgresql": "^5.7.14",
    "@nestjs/common": "^10.3.1",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.1",
    "@nestjs/platform-express": "^10.3.1",
    "@nestjs/swagger": "^7.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^10.2.4",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^5.3.3"
  }
}
